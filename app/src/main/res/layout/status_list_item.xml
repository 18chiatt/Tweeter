<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/status_list_container"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/status_list_image"
        android:layout_width="60sp"
        android:layout_height="60sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="10sp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/status_list_firstNameLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10sp"
        app:layout_constraintLeft_toRightOf="@id/status_list_image"
        android:text="FIRSTLASTNAME" />



    <TextView
        android:id="@+id/status_list_alias"
        android:layout_margin="10sp"
        app:layout_constraintLeft_toRightOf="@id/status_list_firstNameLastName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALIAS"
         />

    <TextView
        android:id="@+id/status_list_dateTime"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/status_list_image"
        app:layout_constraintTop_toBottomOf="@id/status_list_firstNameLastName"
        android:text="Sept 11, 2001" />

    <TextView
        android:id="@+id/status_list_message"
        android:layout_margin="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/status_list_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="tweetView" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toBottomOf="@id/status_list_message"
        android:background="?android:attr/listDivider" />

</androidx.constraintlayout.widget.ConstraintLayout>